<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="4.0">
    <servlet>
        <servlet-name>InceptionNotesSync</servlet-name>
        <servlet-class>com.inceptionnotes.sync.util.InceptionNotesSync</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InceptionNotesSync</servlet-name>
        <url-pattern>/http</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>org.apache.tomcat.websocket.textBufferSize</param-name>
        <param-value>10485760</param-value>
    </context-param>
    <context-param>
        <param-name>org.apache.tomcat.websocket.byteBufferSize</param-name>
        <param-value>10485760</param-value>
    </context-param>
</web-app>